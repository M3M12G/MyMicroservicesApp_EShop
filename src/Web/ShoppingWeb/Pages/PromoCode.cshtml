@page
@model PromoCodeModel
@{ ViewData["Title"] = "Promo Code"; }

<div class="container">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="Index">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Promo Code</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="col-md-6">
   
    <form asp-page-handler="GeneratePromos" method="post" class="card p-2">
        <div class="input-group">
            <div class="row">
                <label asp-for="genReqDTO.Quantity" for="quantity">Promo code Quantity</label>
                <input asp-for="genReqDTO.Quantity" type="number" class="form-control" id="quantity" placeholder="" value="" required>
            </div>
            <div class="row">
                <label asp-for="genReqDTO.Title" for="title">Promo code event Title</label>
                <input asp-for="genReqDTO.Title" type="text" class="form-control" id="title" placeholder="" value="" required>
            </div>
            <div class="row">
                <label asp-for="genReqDTO.ExpirationDate" for="expirationDate">Expiration Date of Promo codes</label>
                <input asp-for="genReqDTO.ExpirationDate" asp-format="{0:yyyy-MM-ddTHH:mm}" class="form-control" id="expirationDate" placeholder="" value="" required>
            </div>
            <div class="row">
                <label asp-for="genReqDTO.Discount" for="discount">First name</label>
                <input asp-for="genReqDTO.Discount" type="number" class="form-control" id="discount" placeholder="" value="" required>
            </div>

            <div class="input-group">
                <button type="submit" class="btn btn-secondary">Generate</button>
            </div>
        </div>
    </form>

</div>

<div class="container mb-4">
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Code</th>
                            <th scope="col">Event title</th>
                            <th scope="col">Expiration Date</th>
                            <th scope="col">Discount</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var code in Model.PromoCodes)
                        {
                            <tr>
                                <td>@code.Code</td>
                                <td>@code.Title</td>
                                <td>@code.ExpirationDate</td>
                                <td>@code.Discount</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
